<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="73dp"
    android:layout_gravity="center_vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:gravity="center_vertical"
        android:background="@drawable/selector_frame_gv_item_bg"
        android:layout_height="36dp">
        <ImageView
            android:id="@+id/item_img"
            android:layout_width="0px"
            android:layout_weight="1"
            android:src="@drawable/release_s1"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/item_text"
            android:layout_width="0px"
            android:layout_weight="2"
            android:textSize="11dp"
            android:background="@drawable/selector_frame_gv_item_bg"
            android:gravity="center"
            android:textColor="#666666"
            android:layout_height="34dp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/item_frameRb"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/selector_frame_gv_item_bg"
        android:button="@null"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@drawable/selector_search_gv_item_tv"
        android:textSize="16sp">
    </CheckBox>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_amount_layout"
        android:divider="@drawable/divider"
        android:focusable="true"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@+id/btnDecrease"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/increase"
            android:gravity="center" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:text="1" />

        <Button
            android:id="@+id/btnIncrease"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/decrease"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>